pipeline {
    agent any

    environment {
        NETBOX_API   = credentials('netbox-api')    // store your API URL if you want it secret (or hardcode)
        NETBOX_TOKEN = credentials('netbox-token')       // your NetBox API token
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/baltah666/netbox-automation-v02.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    ansible-galaxy collection install netbox.netbox
                '''
            }
        }

        stage('Get Devices List') {
            steps {
                script {
                    echo "üîç Fetching device list from NetBox..."
                    def devicesJSON = sh(
                        script: '''
                            . venv/bin/activate
                            export NETBOX_API="$NETBOX_API"
                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                            python3 get_devices.py --quiet
                        ''',
                        returnStdout: true
                    ).trim()

                    // Parse JSON to list
                    def devices = readJSON text: devicesJSON
                    echo "‚úÖ Devices fetched: ${devices}"

                    // Save device list for next stages
                    env.DEVICE_LIST = devicesJSON
                }
            }
        }

        stage('Parallel Config Generation') {
            steps {
                script {
                    def devices = readJSON text: env.DEVICE_LIST
                    def branches = [:]

                    for (dev in devices) {
                        def deviceName = dev // isolate variable per loop iteration

                        branches[deviceName] = {
                            stage("${deviceName}") {
                                parallel(
                                    "1. device.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags device
                                        """
                                    },
                                    "2. interfaces.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags interfaces
                                        """
                                    },
                                    "3. ip_addresses.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags ip_addresses
                                        """
                                    },
                                    "4. site.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags site
                                        """
                                    },
                                    "5. vlans.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags vlans
                                        """
                                    },
                                    "6. generate_config": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags generate_config
                                        """
                                    }
                                )
                            }
                        }
                    }

                    // Execute all device branches in parallel
                    parallel branches
                }
            }
        }

        stage('Git Push Changes') {
            when { expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' } }
            steps {
                sh '''
                    git config user.email "jenkins@localhost"
                    git config user.name "Jenkins"
                    git add configs/
                    git commit -m "Auto-generated configs from Jenkins pipeline" || echo "No changes to commit"
                    git push origin main || echo "No changes to push"
                '''
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        failure {
            echo "‚ùå Pipeline failed ‚Äî check logs."
        }
        success {
            echo "‚úÖ All device configurations generated successfully!"
        }
    }
}
